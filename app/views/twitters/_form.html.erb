<%= form_with(model: @twitter, local: true, url: choose_new_or_edit) do |f| %>
<% if @twitter.errors.any? %>
<div id = "error">
  <h2><%= @twitter.errors.count %>件のエラーがあります</h2>
  <ul>
    <% @twitter.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class = "tweet">
  <%= f.label:content %>
  <%= f.text_area:content %>
</div>
<%= f.submit %>
<% end %>
